<!doctype html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Suivi des médailles{% endblock %}</title>
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/favicon/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon/favicon-16x16.png') }}">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        {% block stylesheets %}
            <link
                rel="stylesheet"
                href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/7.2.1/css/flag-icons.min.css"
                integrity="sha512-bZBu2H0+FGFz/stDN/L0k8J0G8qVsAL0ht1qg5kTwtAheiXwiRKyCq1frwfbSFSJN3jooR5kauE0YjtPzhZtJQ=="
                crossorigin="anonymous"
                referrerpolicy="no-referrer" />
        {% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://kit.fontawesome.com/326581d1fa.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body class="bg-secondary pt-3">
        <div class="container bg-light rounded">
            <header class="pt-2 pb-2 border-bottom row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a class="text-muted" href="/">Accueil</a>
                </div>
                <div class="col-4 text-center">
                    <i class="fa-solid fa-ranking-star"></i>
                    <h2 class="font-weight-bold text-dark">Suivi des médailles</h2>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    {{ render(path('app_search')) }}
                </div>
            </header>
            <nav class="py-1 mb-2 d-flex justify-content-between">
                <a class="nav-link" href="{{ path('app_form_medal') }}">Nouvelle médaille</a>
            </nav>
            <div class="flash-messages">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">
                            <h4 class="alert-heading">{{ label }}</h4>
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
            {% block body %}{% endblock %}
            <footer class="text-muted border-top pt-3 mt-3 pb-3 text-center align-items-center">
                <p>
                    Ce site est une démonstration du framework <b>Symfony</b>.
                </p>
                <p>
                    {% set strings = [
                        'Réalisé avec <i class="fa-solid fa-heart text-danger"></i>',
                        'Réalisé avec <i class="fa-solid fa-coffee"></i>',
                        'Réalisé avec <i class="fa-solid fa-brain"></i>',
                        'Réalisé avec <i class="fa-solid fa-code"></i>',
                        'Réalisé avec <i class="fa-solid fa-laptop"></i>',
                        'Réalisé sous le <i class="fa-solid fa-sun text-warning"></i>',
                        'Réalisé sous le <i class="fa-solid fa-umbrella-beach text-primary"></i>',
                        'Réalisé prés de <i class="fa-solid fa-volcano" style="color: brown"></i>'
                    ] %}
                    <span
                        data-controller="symfony--ux-typed"
                        data-symfony--ux-typed-loop-value="true"
                        data-symfony--ux-typed-show-cursor-value="true"
                        data-symfony--ux-typed-cursor-char-value="|"
                        data-symfony--ux-typed-strings-value="{{ strings|json_encode|e('html_attr') }}"
                    ></span>
                    <br/>
                    par <a href="https://github.com/ilbee" class="text-muted" target="_blank">Julien PRIGENT</a>
                </p>
            </footer>
        </div>
    </body>
</html>
